<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp">
    <ImageView
        android:id="@+id/img_mp4_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/mp4_location_player_icon"
        android:scaleType="centerInside"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:id="@+id/txt_mp4_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="十一月的雨"
        android:layout_toRightOf="@+id/img_mp4_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:paddingRight="20dp"
        />
    <TextView
        android:id="@+id/txt_mp4_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="12M"
        android:layout_toRightOf="@+id/img_mp4_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="58dp"
        />
    <TextView
        android:id="@+id/txt_mp4_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="6:27"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:layout_marginTop="58dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#ce4cd294"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="80dp"
        />

</RelativeLayout>