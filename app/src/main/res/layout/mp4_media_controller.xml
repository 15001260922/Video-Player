<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--面板，媒体控制栏顶部-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#54000000"
        android:orientation="vertical">
        <!--媒体控制栏顶部,电池状态栏-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/txt_video_name"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:text="视频名称" />
            <TextView
                android:id="@+id/txt_system_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginRight="5dp"
                android:text="10:24" />
            <ImageView
                android:id="@+id/img_battery"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/dianci_2"
                android:scaleType="fitCenter"
                android:layout_marginRight="5dp" />
        </LinearLayout>

        <!--媒体控制栏顶部,音量调节栏-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/img_sound_switch"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:clickable="true"
                android:src="@drawable/sound_on"/>
            <SeekBar
                android:id="@+id/seekBar_sound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="200dp"
                android:minHeight="1dp"
                android:maxHeight="1dp"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/img_wan_nengPlayer"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="30dp"
                android:clickable="true"
                android:visibility="gone"
                android:src="@drawable/mp4_wanneng_player_img_selector"/>
            <ImageView
                android:id="@+id/img_more_control"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="2dp"
                android:clickable="true"
                android:src="@drawable/mp4_more_control_selector"/>
        </LinearLayout>
    </LinearLayout>

    <!--面板，媒体控制栏底部-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#54000000"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >
        <!--媒体控制栏顶部,音量调节栏-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/txt_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="10dp"
                android:text="0:00" />
            <SeekBar
                android:id="@+id/seekBar_jindu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:minHeight="1dp"
                android:maxHeight="1dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txt_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:textSize="10dp"
                android:text="06:15"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/mp4_back_img_selector"
                android:scaleType="centerInside"
                android:layout_weight="1"
                android:clickable="true" />
            <ImageView
                android:id="@+id/img_previous_mp4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/mp4_previous_img_selector"
                android:scaleType="centerInside"
                android:clickable="true"
                android:layout_weight="1" />
            <ImageView
                android:id="@+id/img_stop_play"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/stop"
                android:scaleType="centerInside"
                android:clickable="true"
                android:layout_weight="1" />
            <ImageView
                android:id="@+id/img_next_mp4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/mp4_next_img_selector"
                android:scaleType="centerInside"
                android:clickable="true"
                android:layout_weight="1" />
            <ImageView
                android:id="@+id/img_big_screen"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/qie_quanping"
                android:scaleType="centerInside"
                android:clickable="true"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>